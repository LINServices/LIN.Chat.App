<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="LIN.UI.Controls.ChatControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Margin="0,10,0,0">
        <Label
            x:Name="displayName"
            Margin="0,4,0,2"
            FontFamily="QSB"
            FontSize="10"
            Text="Juanito"
            TextColor="#ABAAB6" />
        <Border
            x:Name="frame"
            Margin="0,0,0,0"
            Padding="0"
            HorizontalOptions="Start"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="0"
            VerticalOptions="Start"
            WidthRequest="250">
            <Label
                x:Name="MessageDesign"
                Margin="15"
                FontFamily="QSM"
                Text="Hola mejor amiguito"
                TextColor="White"
                VerticalTextAlignment="Center" />
        </Border>
    </VerticalStackLayout>
</ContentView>
